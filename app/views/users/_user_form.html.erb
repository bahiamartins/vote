	<%= f.text_field :name, :placeholder => "Nome e Sobrenome", :class => "input-xlarge" %>
	<label>Seu email</label>
	<%= f.text_field :email, :placeholder => "seu@email.com", :class => "input-xlarge" %>
	<label>Seu telefone</label>
	<%= f.text_field :phone, :placeholder => "DDD + nÃºmero", :class => "input-xlarge" %>
	</br>
	<%= f.submit "Cadastrar agora", class: "btn btn-success" %>
<% end %>